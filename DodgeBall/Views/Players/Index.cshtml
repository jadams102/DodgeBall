@model IEnumerable<DodgeBall.Models.Player>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaidDues)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Team)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaidDues)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Team.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PlayerId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.PlayerId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.PlayerId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-action="Create" class="btn btn-success btn-lg">Create New</a>
    </p>
</body>
</html>
